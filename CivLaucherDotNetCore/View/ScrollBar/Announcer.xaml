<UserControl x:Class="ModLoader.View.ScrollBar.Announcer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:ModLoader.Vue.ModsViewers.Model" 
             d:DataContext="{d:DesignInstance Type=model:ModView}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#5497D4" CornerRadius="8"  BorderThickness="4px" Height="80"  Background="#143F66">
        <StackPanel Grid.Column="0"  Width="1000" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0">
            <Canvas  Height="35px"  HorizontalAlignment="Left" VerticalAlignment="center" Width="800">
                <Canvas  Canvas.Left="0" Canvas.Top="0" Margin="0" ClipToBounds="false" Name="_canMain"  Width="1500" Height="35px"    >
                    <TextBlock x:Uid="TextBlockLabelInfo" x:Name="labelInfo" Text="{Binding labelInfo}" FontSize="24" Foreground="#d0d4d9">
                    </TextBlock>
                </Canvas>
            </Canvas>
        </StackPanel>
    </Border>
</UserControl>
