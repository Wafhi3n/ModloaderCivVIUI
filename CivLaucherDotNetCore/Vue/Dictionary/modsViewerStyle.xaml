<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">








     <!-- ModViewers  -->
    
    <Style x:Key="DatagridModStyle" TargetType="DataGrid">
        <Setter Property="ColumnHeaderStyle" Value="{DynamicResource DatagridModStyleHC}"></Setter>
        <Setter Property="RowHeaderStyle" Value="{DynamicResource DatagridModStyleHR}"></Setter>
    </Style>

    <Style x:Key="DatagridModStyleCell" TargetType="DataGridCell">
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource bleuFonceB}"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style >
    <Style x:Key="DatagridModStyleCellLabel" TargetType="Label">
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="FontSize" Value="22"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>

    </Style>
    <Style x:Key="DatagridModStyleHC" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{DynamicResource bleuFonceB}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource blancCasseB}"></Setter>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Padding" Value="5,0,0,0"></Setter>
    </Style>



</ResourceDictionary>